<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiInterface.Views.CadastroPage"
             Title="Cadastro">
    
    
    
    
    <VerticalStackLayout Padding="30">
        <Entry x:Name="NomeEntry" Placeholder="Nome"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Senha" IsPassword="True"/>
        <Button Text="Cadastrar" Clicked="OnCadastrarClicked"/>
        <Label x:Name="MsgLabel" TextColor="Red"/>
    </VerticalStackLayout>
</ContentPage>
