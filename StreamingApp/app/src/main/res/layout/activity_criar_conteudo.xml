<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtNomeConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do conteúdo"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/edtTipoConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo (Vídeo, Imagem, etc.)"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/edtUrlConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL do conteúdo"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/edtNomeCriador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do criador"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnCadastrarConteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />
</LinearLayout>
