<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Nome do App -->
    <TextView
        android:id="@+id/txtTituloApp"
        android:text="StreamingApp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Conteúdo -->
    <FrameLayout
        android:id="@+id/conteudoContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp" >

        <ImageButton
            android:id="@+id/btnFullscreen"
            android:src="@android:drawable/ic_menu_crop"
            android:contentDescription="Fullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end|top"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Botões Curtir, Playlist, Download -->
    <LinearLayout
        android:id="@+id/interacaoLayout"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:weightSum="4">

        <Button
            android:id="@+id/btnCurtir"
            android:text="Curtir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDescurtir"
            android:text="Descurtir"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnPlaylist"
            android:text="Add à Playlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnDownload"
            android:text="Download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Comentário -->
    <EditText
        android:id="@+id/edtComentario"
        android:hint="Digite um comentário..."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />

    <Button
        android:id="@+id/btnComentar"
        android:text="Comentar"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtComentarios"
        android:text="Comentários:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/comentariosContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
    </ScrollView>

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:weightSum="4">

        <ImageButton
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="Você"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="Início"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:src="@android:drawable/ic_menu_agenda"
            android:contentDescription="Biblioteca"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Configurações"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
</LinearLayout>
