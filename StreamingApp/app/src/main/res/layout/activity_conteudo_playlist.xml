<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/txtTituloPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Playlist"
        android:padding="15dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutConteudos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNav"
        android:layout_below="@id/txtTituloPlaylist"
        android:contentDescription="Lista de intes da playlist"
        android:padding="8dp"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/btnVoce"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Você"
            android:importantForAccessibility="yes"
            android:scaleType="fitCenter"
            android:src="@drawable/perfil" />

        <ImageButton
            android:id="@+id/btnInicio"
            android:scaleType="fitCenter"
            android:src="@drawable/home_page"
            android:contentDescription="Início"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnBiblioteca"
            android:src="@drawable/library"
            android:scaleType="fitCenter"
            android:contentDescription="Biblioteca"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnConfig"
            android:scaleType="fitCenter"
            android:src="@drawable/config"
            android:contentDescription="Configurações"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>


</RelativeLayout>

