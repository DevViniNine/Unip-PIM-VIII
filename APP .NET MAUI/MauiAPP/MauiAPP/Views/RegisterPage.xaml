<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAPP.Views.RegisterPage"
             Title="Registrar">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="nomeEntry" Placeholder="Nome" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Senha" IsPassword="True" />

        <Button Text="Registrar" Clicked="OnRegisterClicked" />
        <Label x:Name="msgLabel" TextColor="Red" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
